<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/bajo">


    <!-- Contenedor de scroll -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Primera fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Primer elemento -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_bebidas"
                        android:layout_width="144dp"
                        android:layout_height="187dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/coquita" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bebidas"
                        android:textAllCaps="true"
                        android:textColor="#000509"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Segundo elemento -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_botanas"
                        android:layout_width="144dp"
                        android:layout_height="187dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/doritos"
                            android:scaleType="fitXY" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Botanas"
                        android:textAllCaps="true"
                        android:textColor="#000509"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <!-- Segunda fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Productos de limpieza -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_limpieza"
                        android:layout_width="144dp"
                        android:layout_height="187dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cloro"
                            android:scaleType="fitXY" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P.Limpieza"
                        android:textAllCaps="true"
                        android:textColor="#000509"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Legumbres -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_legumbres"
                        android:layout_width="144dp"
                        android:layout_height="187dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/semillas"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="legumbres"
                        android:textAllCaps="true"
                        android:textColor="#000509"
                        android:textSize="16dp"

                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tercera fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Galletas -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_galletas"
                        android:layout_width="144dp"
                        android:layout_height="187dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/panes"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galletas/Panes"
                        android:textAllCaps="true"
                        android:textColor="#000509"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Dulces -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_dulces"
                        android:layout_width="144dp"
                        android:layout_height="187dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dulcesitos"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dulces"
                        android:textAllCaps="true"
                        android:textColor="#000509"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
