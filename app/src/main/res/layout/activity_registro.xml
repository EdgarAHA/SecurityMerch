<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/fondoregistro">

    <!-- Logo o título de la pantalla -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="248dp"
        android:layout_height="108dp"
        app:srcCompat="@drawable/nuevo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Crear Cuenta"
        android:textColor="#FAEBEB"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Campo de Nombre -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#ECD9D9"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFDDF3"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:padding="12dp"/>

    <!-- Campo de Correo Electrónico -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#ECD9D9"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFDDF3"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:padding="12dp" />

    <!-- Campo de Contraseña -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:backgroundTint="#ECD9D9"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFDDF3"
        android:padding="12dp" />

    <!-- Campo de Confirmación de Contraseña -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Confirmar Contraseña"
        android:inputType="textPassword"
        android:backgroundTint="#ECD9D9"
        android:textColor="#FFFFFF"
        android:textColorHint="#AFDDF3"
        android:padding="12dp" />

    <!-- Botón de Registro -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2196F3"
        android:padding="12dp"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Texto para iniciar sesión si ya tiene una cuenta -->
    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="¿Ya tienes una cuenta? Inicia sesión"
        android:textColor="#F7F9FB"
        android:textSize="14sp" />

</LinearLayout>
